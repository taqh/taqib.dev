---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"article"> {}
const { class: classNames, ...attrs } = Astro.props;
---

<article
  {...attrs}
  class={cn("prose prose-taqib w-full prose-headings:font-medium prose-headings:text-balance prose-headings:font-serif prose-code:before:content-none prose-code:after:content-none", classNames)}
>
  <slot />
</article>
