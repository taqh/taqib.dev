---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"article"> {}
const { class: classNames, ...attrs } = Astro.props;
---

<article
  {...attrs}
  class={`prose prose-taqib max-w-2xl prose-headings:font-medium prose-headings:text-balance prose-headings:font-serif prose-code:before:content-none prose-code:after:content-none my-6 mx-auto ${classNames}`}
>
  <slot />
</article>
