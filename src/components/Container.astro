---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";
interface Props extends HTMLAttributes<"div"> {}
const { class: classNames, ...attrs } = Astro.props;
---

<div
  class={cn(
    "mx-auto w-full h-full max-w-3xl px-6 md:px-10 lg:px-14 z-10",
    classNames,
  )}
  {...attrs}
>
  <slot />
</div>
